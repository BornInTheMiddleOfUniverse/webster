extends ../base

block content     
    video(src="/" + video.videoPath, controls)
    div
        p=video.description
        small=video.createdAt
        br
        small Uploaded by
            a(href=`/user/${String(video.owner._id)}`) #{video.owner.username}
        p=video.description
        p=video.hashtags
        
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &rarr; 
    