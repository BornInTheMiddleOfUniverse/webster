extends ../base

block content     
    div#videoContainer(data-id=video._id)
        video(src="/" + video.videoPath)
        
        div#videoControls
            div.timeline
                input(type="range", step="1", value="0", min="0")#timeline
            div.control_btns
                span#play
                    i.fas.fa-play 
                span#mute
                    i.fas.fa-volume-up
                input(type="range", step="0.1", min="0", max="1")#volume
                div#time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
                span#fullScreen
                    i.fas.fa-expand

    div#videoInfo
        div.videoInfo__hashtags=video.hashtags
        small.videoInfo__title=video.title
        small.videoInfo__views=video.meta.views      
        a.videoInfo__likeBtn#like(href=`/videos/${String(video._id)}/like`) #{video.meta.likes} likes
        br
        small.videoInfo__uploaded_user Uploaded by 
            a(href=`/user/${String(video.owner._id)}`) #{video.owner.username}
        small.videoInfo__last_update Last update #{new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'short', year: 'numeric', month: 'short', day: 'numeric'})}
        div.videoInfo__description=video.description        
        

        if loggedInUser && String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &rarr; 
    
block scripts
    script(src="/static/js/videoPlayer.js")