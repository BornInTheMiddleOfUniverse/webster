extends ../base

block content 
    if errorMessage 
        span.errorMessage=errorMessage
    div
        video#preview
        button#startBtn Start Recording
    form(method="POST", enctype="multipart/form-data")
        input(type="file", name="video", required)
        input(placeholder="Title", type="text", name="title", required)
        input(placeholder="Description", type="text", name="description")
        input(placeholder="Hashtags, separated by comma.", type="text", name="hashtags", required)
        input(value="Upload Video", type="submit")

block scripts 
    script(src="/static/js/recorder.js")