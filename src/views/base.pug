doctype html
html(lang="en")
    head       
        title Webster | #{pageTitle} 
        link(rel="stylesheet", href="/static/css/styles.css")
    body 
        include partials/header.pug
        
        main.main
            div.menu
            
                ul 
                    li
                        a(href="/videos") Video
                    li Twits 
                    li People
                    li Game
                    li Chat
                    li Club
                    li Shop 
                    li Updates

                div.brief_user_info User Info
                    if !loggedIn
                        li
                            a(href="/user/join") Join
                        li
                            a(href="/user/login") Log In
                    if loggedIn
                        li
                            a(href="/user/logout") Log Out
                        li 
                            a(href="/user/account") #{loggedInUser.username}'s Profile
                        

            div.contents
                block content
            

        include partials/footer.pug