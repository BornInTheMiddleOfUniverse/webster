extends ../base

block content
    if errorMessage 
        span.errorMessage=errorMessage

    form(method="POST")
        input(placeholder="e-mail", type="email", name="email", required)
        input(placeholder="password", type="password", name="password", required)        
        input(type="submit", value="Login")
        br
        a(href="/user/github/start") Login with Github
        a(href="/user/google/start") Login with Google
        a(href="/user/discord/start") Login with Discord
        br

    span Don't have an account yet?
    a(href="/user/join") Register